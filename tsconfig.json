{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "pretty": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES6",
    "lib": ["ES2022", "dom"],
    "types": ["@types/node"]
  },
  "files": [
    "src/index.ts",
    "src/cli/index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "formatOnSave": false,
    "rewriteTsconfig": false
  },
  "typeRoots": [
    "../node_modules/@types"
  ]
}
